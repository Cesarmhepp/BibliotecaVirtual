<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BibliotecaVirtual.Login">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Frame BackgroundColor="#2196F3" CornerRadius="0">
                    <Label Text="Biblioteca Virtual" HorizontalTextAlignment="Center" TextColor="White" FontSize="30"/>
                </Frame>
                <Image Source="logo.png" WidthRequest="200" HeightRequest="200" Margin="0,20,0,20"/>

                <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="20" BorderColor="White" Margin="30,0,30,0">
                    <StackLayout Margin="20,0,20,20">
                        <Label TextColor="WhiteSmoke" FontSize="20">Correo</Label>
                        <Entry></Entry>
                        <Label TextColor="WhiteSmoke" FontSize="20">Contraseña</Label>
                        <Entry></Entry>
                    </StackLayout>
                </Frame>
                <Button Clicked="BtnLogin" VerticalOptions="Center" TextColor="White" Text="Iniciar Sesion" Margin="80,20,80,0" BackgroundColor="#2196F3"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>